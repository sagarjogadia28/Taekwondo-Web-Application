@model IEnumerable<taekwondoApp.Models.student_class>

@{
    ViewBag.Title = "Index";
}

<h2>Classes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Find: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Class Level", "Index", new { sortOrder = ViewBag.LevelSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.class_on)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.start_time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.end_time)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.class_level)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.class_on)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.start_time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.end_time)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.class_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.class_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.class_id })
            </td>
        </tr>
    }

</table>
